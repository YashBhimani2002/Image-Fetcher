{
    "manifest_version": 3,
    "name": "Image Fetcher",
    "version": "1.0.0",
    "description": "Download any image form any website",
    "icons": {
        "16": "assets/icons/IF_icon_16.png",
        "34": "assets/icons/IF_icon_34.png",
        "48": "assets/icons/IF_icon_48.png",
        "128": "assets/icons/IF_icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.flipkart.com/*",
                "https://*.colorhunt.org/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://*.flipkart.com/*",
        "https://*.colorhunt.org/*"
    ],
    "web_accessible_resources": [
        {
          "resources": ["buttonComponent.js"],
          "matches": ["<all_urls>"]
        }
      ]
}